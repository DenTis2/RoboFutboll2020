int up() {
     int compass;
     compass = SensorHTCompass(IN_3);

     upCenter = (compass + 540 - azimut) % 360 - 180;
     upLeft = (compass + 540 - azimutLeft) % 360 - 180;
     upRight = (compass + 540 - azimutRight) % 360 - 180;
     return upCenter;
}
void returnGoal() {
    //Повернуться в левый борт
    OnFwd(OUT_C, 0);
    OnFwd(OUT_B, 0);
    OnFwd(OUT_A, 0);
    up();
    while(abs(upLeft) >= 10) {
    
              
                if(upLeft < 0) {
                       OnFwd(OUT_C, -75);
                       OnFwd(OUT_B, 75);
                }
                if(upLeft > 0) {
                       OnFwd(OUT_C, 75);
                       OnFwd(OUT_B, -75);
                }
                if(upLeft == 0) {
                       OnFwd(OUT_C, 0);
                       OnFwd(OUT_B, 0);
                }
                Wait(50);
                up();
                x = SensorUS(IN_1);
                TextNumOut(0, LCD_LINE3, "upCenter:    ",4,upCenter);
                TextNumOut(6, LCD_LINE4, "upLeft:     ",3,upLeft);
                TextNumOut(6, LCD_LINE5, "upRight:     ",3,upRight);
                TextNumOut(6, LCD_LINE6, "Rast:     ",3,x);
    }
                       OnFwd(OUT_C, 0);
                       OnFwd(OUT_B, 0);
                       //PlayTone(1780, 500);
                       Wait(50); 
                       //поворот налево завершен
    
    //ехать к центру до 93 сантиметров
    x = SensorUS(IN_1);
    while(abs(x - 93) > 5) {
         up();
         x = SensorUS(IN_1);
                TextNumOut(0, LCD_LINE3, "upCenter:    ",4,upCenter);
                TextNumOut(6, LCD_LINE4, "upLeft:     ",3,upLeft);
                TextNumOut(6, LCD_LINE5, "upRight:     ",3,upRight);
                TextNumOut(6, LCD_LINE6, "Rast:     ",4,x);
         if(x > 93) {
              OnFwd(OUT_C, 90 + upLeft/2);
              OnFwd(OUT_B, 90 - upLeft/2);

         }
         else {
              OnFwd(OUT_C, -90 + upLeft/2);
              OnFwd(OUT_B, -90 - upLeft/2);
         }
         Wait(50);
    }
                       OnFwd(OUT_C, 0);
                       OnFwd(OUT_B, 0);
                       PlayTone(1780, 500);
                       Wait(50);
                       //Wait(5000); //doit

    // Повернуться на ворота
    OnFwd(OUT_C, 0);
    OnFwd(OUT_B, 0);
    OnFwd(OUT_A, 0);
    up();
    
    while(abs(upCenter) >= 10) {


                if(upCenter < 0) {
                       OnFwd(OUT_C, -75);
                       OnFwd(OUT_B, 75);
                }
                if(upCenter > 0) {
                       OnFwd(OUT_C, 75);
                       OnFwd(OUT_B, -75);
                }
                if(upCenter == 0) {
                       OnFwd(OUT_C, 0);
                       OnFwd(OUT_B, 0);
                }
                Wait(50);
                up();
                x = SensorUS(IN_1);
                TextNumOut(0, LCD_LINE3, "upCenter:    ",4,upCenter);
                TextNumOut(6, LCD_LINE4, "upLeft:     ",3,upLeft);
                TextNumOut(6, LCD_LINE5, "upRight:     ",3,upRight);
                TextNumOut(6, LCD_LINE6, "Rast:     ",3,x);
    }
         OnFwd(OUT_C, 0);
         OnFwd(OUT_B, 0);
         Wait(50);
         //PlayTone(1780, 500);
         //Wait(5000);

    // Двиггаться к воротам
    x = SensorUS(IN_1);
     while(abs(x - 35) > 5) {
         up();
         x = SensorUS(IN_1);
                TextNumOut(0, LCD_LINE3, "upCenter:    ",4,upCenter);
                TextNumOut(6, LCD_LINE4, "upLeft:     ",3,upLeft);
                TextNumOut(6, LCD_LINE5, "upRight:     ",3,upRight);
                TextNumOut(6, LCD_LINE6, "Rast:     ",4,x);
         if(x > 35) {
              OnFwd(OUT_C, 75 + upCenter/2);
              OnFwd(OUT_B, 75 - upCenter/2);

         }
         else {
              OnFwd(OUT_C, -75 + upCenter/2);
              OnFwd(OUT_B, -75 - upCenter/2);
         }
         Wait(50);
    }
         OnFwd(OUT_C, 0);
         OnFwd(OUT_B, 0);
         Wait(50);
         //PlayTone(1780, 500);
         //Wait(5000);

}

kalibrovka();
goal = 1;
Wait(50);
/*
  1. Поворот на мяч
  2. Если мяч близко, атаковать 4-5 секунд.
  3. Воврат в ворота.
*/
s = 0;
while(true)
{
 ReadSensorHTIRSeeker2AC(IRSEEKER, dir, s1, s2, s3, s4, s5);
 rast = s1 + s2 + s3 + s4 + s5;
 
 //Режим стоять в воротах
  if(rast<80 && goal == 1){
    ScanBall();
  }
  
  //переключить режим в атаку
  if (rast>=80 && goal == 1) {
     ataka = 1;
     time1 = CurrentTick();
     goal = 0;
     PlayTone(1780, 500);
     }

  //переключить режим НЕ атака
  time2 = CurrentTick();
  t = time2-time1;
  if(t > 4000  && rast<80 && ataka == 1) {
             ataka = 0;
             PlayTone(1580, 500);
  }
  
  //ЗВЕРШИТЬ АТАКУ ПО ВРЕМЕНИ ЧЕРЕЗ 4 СЕК

  if(ataka == 1) {
    //PlayTone(1780, 500);
    gotoball();
  }
    
  if (ataka == 0 && goal == 0)
   {
    returnGoal();
    goal = 1;
   }
}

